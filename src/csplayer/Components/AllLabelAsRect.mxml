<?xml version="1.0"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
        >
    <fx:Script><![CDATA[
        import csplayer.Classes.SoundTrack;
        import csplayer.Classes.Tag;

        public function set data(value:SoundTrack):void {
            removeAllElements();
            for each (var i:Tag in value.labels) {
                var lar:LabelRect = new LabelRect();
                lar.toolTip = i.nameWithSpecs;
                lar.color1 = i.color1;
                lar.textColor = i.textColor;
                addElement(lar);
            }
        }
        ]]></fx:Script>
</s:HGroup>
