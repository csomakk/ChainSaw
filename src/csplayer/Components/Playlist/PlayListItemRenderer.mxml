<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:mx="library://ns.adobe.com/flex/mx"
                autoDrawBackground="true">
    <fx:Script>
		<![CDATA[
        import csplayer.Classes.SoundTrack;
        ]]>
	</fx:Script>
    <mx:HBox width="100%">
        <s:Image visible="{ itemIndex == PlayList.instance.currentSong }"
                 source="@Embed('/assets/icons/1342556059_playsound.png')"/>
        <s:Label width="22" height="100%" text="{itemIndex}" textAlign="right" verticalAlign="middle"/>
        <s:Label width="60%"
                 height="100%"
                 text="{(data as SoundTrack).title}"
                 verticalAlign="middle"/>
        <s:Label height="100%"
                 text="by"
                 verticalAlign="middle"/>
        <s:Label width="30%"
                 height="100%"
                 text="{(data as SoundTrack).artist}"
                 verticalAlign="middle"/>
    </mx:HBox>
</s:ItemRenderer>
